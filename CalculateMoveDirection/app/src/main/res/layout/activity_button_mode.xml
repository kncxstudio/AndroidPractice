<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_button_mode_start_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:text="Start"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/activity_button_mode_up_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/activity_button_mode_start_btn"
        android:layout_centerHorizontal="true"
        android:text="▲"
        android:textSize="48sp"/>
    <Button
        android:id="@+id/activity_button_mode_down_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/activity_button_mode_start_btn"
        android:layout_centerHorizontal="true"
        android:text="▼"
        android:textSize="48sp"/>

    <Button
        android:id="@+id/activity_button_mode_left_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/activity_button_mode_up_btn"
        android:layout_toStartOf="@id/activity_button_mode_start_btn"
        android:text="◀"
        android:textSize="48sp"/>

    <Button
        android:id="@+id/activity_button_mode_right_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/activity_button_mode_up_btn"
        android:layout_toEndOf="@id/activity_button_mode_start_btn"
        android:text="▶"
        android:textSize="48sp"/>
</RelativeLayout>