<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iboxshare.sockettest.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/activity_main_TCP_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TCP测试"/>
    <ScrollView
        android:id="@+id/activity_main_scroll"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <TextView
        android:id="@+id/activity_main_receive_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"/>
    </ScrollView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <EditText
            android:id="@+id/activity_main_send_content"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/send_btn"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="发送"/>
    </LinearLayout>

</LinearLayout>
